{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": [
            "./node_modules/@types",
            "./src/index.d.ts"
        ],
        "jsx": "react"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "paths": {
        "@/*": [
            "./src/*"
        ]
    }
}
